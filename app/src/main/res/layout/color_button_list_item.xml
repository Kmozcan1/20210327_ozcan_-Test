<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/colorButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/selectedColorIndicatorImageView"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:padding="2dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircularButtonStyle"
            app:srcCompat="@drawable/default_image_view_pager_dot"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/colorButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:backgroundTint="#FFFFFF"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="@+id/selectedColorIndicatorImageView"
            app:layout_constraintEnd_toEndOf="@+id/selectedColorIndicatorImageView"
            app:layout_constraintStart_toStartOf="@+id/selectedColorIndicatorImageView"
            app:layout_constraintTop_toTopOf="@+id/selectedColorIndicatorImageView"
            app:shapeAppearanceOverlay="@style/CircularButtonStyle"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>